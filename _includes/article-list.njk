<nav class="c-link-list">
    <h2 class="c-link-list__title">Latest posts:</h2>
    <ul class="c-link-list__list">
        {%- for post in collections.post | reverse -%}
            <li>
                <a href="{{ post.url }}">
                    <span class="c-link-list__text">
                        {{ post.data.title | safe }}
                    </span>
                    <time class="c-link-list__meta" datetime="{{ post.date }}">
                        ({{ post.data.publishDate }})
                    </time>
                </a>
            </li>
        {%- endfor -%}
    </ul>
</nav>
